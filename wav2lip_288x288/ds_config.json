{
  "fp16": {
    "enabled": false,
    "auto_cast": true,
    "loss_scale": 0,
    "initial_scale_power": 16,
    "loss_scale_window": 1000,
    "hysteresis": 2,
    "min_loss_scale": 1
  },
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.001,
      "betas": [
        0.8,
        0.999
      ],
      "eps": 1e-8,
      "weight_decay": 3e-7
    }
  },
   "scheduler": {
    "type": "OneCycle",
    "params": {
        "cycle_min_lr": 1e-04,
        "cycle_max_lr": 3e-04
    }
  },
  "zero_optimization": {
      "stage": 0
  },
  "gradient_accumulation_steps": 2,
  "gradient_clipping": 0.0,
  "steps_per_print": 2000,
  "train_batch_size": 64,
  "train_micro_batch_size_per_gpu": 4,
  "wall_clock_breakdown": false
}
